<Window x:Class="TestLogin_Romanov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestLogin_Romanov"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Приложение для пользователей" Height="600" Width="1000">
    <Grid Background="#232621">
        <Border MinWidth="400" Margin="15" Background="white" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" /> 
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Привет!" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" />

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Регистрация"/>
                    <Button HorizontalAlignment="Right" Content="Войти" Style="{StaticResource MaterialDesignFlatButton}"/>
                
                </Grid>

                <TextBlock materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                <PasswordBox materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignCharacterCounterTextBlock }"/>
                <PasswordBox materialDesign:HintAssist.Hint="Потвердите пароль" Style="{StaticResource MaterialDesignCharacterCounterTextBlock }"/>
                <TextBlock materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignCharacterCounterTextBlock }"/>
            </StackPanel>
            
        </Border>
    </Grid>
</Window>
